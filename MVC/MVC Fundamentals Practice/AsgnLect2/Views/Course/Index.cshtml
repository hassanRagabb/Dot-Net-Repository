@model List<Course>
@{
    ViewData["Title"] = "Index";
}

<h1>Index all courses</h1>
<a href="/Course/AddNew">add new course</a>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Degree</th>
            <th>Min Degree</th>
            <th>Department</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var course in Model)
        {
            <tr>
                <td>@course.Id</td>
                <td>@course.Name</td>
                <td>@course.Degree</td>
                <td>@course.minDegree</td>
                <td>@course.Department?.Name</td>
                
            </tr>
        }
    </tbody>
</table>